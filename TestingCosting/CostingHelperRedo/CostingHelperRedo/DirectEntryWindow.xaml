<Window x:Class="CostingHelper.DirectEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CostingHelperRedo"
        mc:Ignorable="d"
        Title="Direct Entry" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="DirectEntryTextBox" Text="Enter Text Here" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="73,0,85,85"/>
        <Button x:Name="DoneButton" Content="Done" HorizontalAlignment="Left" Margin="311,362,0,0" VerticalAlignment="Top" Width="160" Height="29" Click="Done_Click"/>
    </Grid>
</Window>
